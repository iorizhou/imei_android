<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:paddingTop="30dp"
    android:paddingBottom="10dp"
    xmlns:zsr="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/ope_btn"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号"
                    android:id="@+id/orderdetail_orderid"
                    android:textSize="18sp"
                    android:textColor="@color/black_ff"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单状态"
                    android:id="@+id/orderdetail_status"
                    android:textSize="18sp"
                    android:textColor="@color/black_ff"
                    />
            </LinearLayout>
            <Button
                android:visibility="gone"
                android:id="@+id/ope_btn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预订手机"
            android:id="@+id/orderdetail_phone"
            android:textSize="18sp"
            android:textColor="@color/black_ff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间"
            android:id="@+id/orderdetail_createtime"
            android:textSize="18sp"
            android:textColor="@color/black_ff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费码"
            android:id="@+id/orderdetail_consumecode"
            android:textSize="18sp"
            android:visibility="gone"
            android:textColor="@color/black_ff"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付信息"
        android:textSize="18sp"
        android:textColor="@color/black_ff"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:id="@+id/orderdetail_paychannel"
            android:textSize="18sp"
            android:textColor="@color/black_ff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单价"
            android:id="@+id/orderdetail_discount"
            android:textSize="18sp"
            android:textColor="@color/black_ff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买数量"
            android:id="@+id/orderdetail_buycount"
            android:textSize="18sp"
            android:textColor="@color/black_ff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到院决定消费后再付给医院尾款"
            android:id="@+id/orderdetail_wk"
            android:textSize="18sp"
            android:textColor="@color/black_ff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线支付"
            android:id="@+id/orderdetail_needpay"
            android:textSize="18sp"
            android:textColor="@color/black_ff"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/orderdetail_itemname"
            android:textSize="18sp"
            android:singleLine="true"
            android:textColor="@color/black_ff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/orderdetail_hospital"
            android:textSize="18sp"
            android:singleLine="true"
            android:textColor="@color/black_ff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/orderdetail_price"
            android:textSize="18sp"
            android:singleLine="true"
            android:textColor="@color/black_ff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医院地址: "
            android:id="@+id/orderdetail_hospitaladdr"
            android:textSize="18sp"
            android:singleLine="true"
            android:textColor="@color/black_ff"
            />
    </LinearLayout>
</LinearLayout>
